{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "files": [
    "typings/main.d.ts",
    "test/injector.spec.ts",
    "test/sanity-test.spec.ts",
    "src/app/app.spec.ts",
    "src/app/app.ts",
    "src/app/directives/x-large.ts",
    "src/app/directives/x-large.spec.ts",
    "src/app/providers/title.spec.ts",
    "src/app/providers/title.ts",
    "src/app/home/home.ts",
    "src/bootstrap.ts",
    "src/vendor.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
