{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@giddh-workspaces/*": [
        "libs/*"
      ],
      "@giddh-workspaces/electron": [
        "xplat/electron/index.ts"
      ],
      "@giddh-workspaces/electron/*": [
        "xplat/electron/*"
      ],
      "@giddh-workspaces/web": [
        "xplat/web/index.ts"
      ],
      "@giddh-workspaces/web/*": [
        "xplat/web/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}