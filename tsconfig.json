{
    "compileOnSave": false,
    "compilerOptions": {
      "inlineSources": true,
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "ES2022",
      "module": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "ES2022",
        "dom"
      ],
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@giddh-workspaces/*": [
          "libs/*"
        ],
        "@giddh-workspaces/electron": [
          "xplat/electron/index.ts"
        ],
        "@giddh-workspaces/electron/*": [
          "xplat/electron/*"
        ],
        "@giddh-workspaces/web": [
          "xplat/web/index.ts"
        ],
        "@giddh-workspaces/web/*": [
          "xplat/web/*"
        ],
        "path": [
          "./node_modules/path-browserify"
        ]
      },
      "useDefineForClassFields": false
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
